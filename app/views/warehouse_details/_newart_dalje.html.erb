<%= form_for [@warehouse_document, @warehouse_detail],  url: {action: "create_art_dalje"}, remote: true, html: { class: "form-horizontal", style: "display:inline;" }  do |f| %>
  <div class="modal-body">
    <ul class="errors"></ul>
    
    <div class="control-group">
      <%= f.label :item_id, "Artikullil", class: "control-label" %>
      <div class="controls">

        <%= f.collection_select :item_id, Item.tenjesis(@user.department_id).order(:id), :id, :emertimi, include_blank: true %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :sasia, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :sasia %>
      </div>
    </div>
    
    <%= f.hidden_field :cmimi, :value => 0.1 %>

  </div>
  <div class="modal-footer">
    <%= f.submit "Shto artikullin",  class: "btn btn-primary" %>
    <%= link_to "Anulo", "#", class: "btn", data: {dismiss: "modal"} %>
  </div>
<% end %>