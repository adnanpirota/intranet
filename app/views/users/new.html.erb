<% provide(:title, 'Regjistro punetore') %>
<h1>Regjistro punetore te ri</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user , html: { multipart: true }) do |f| %>
      <%= render 'fields', f: f %>
      
      <%= f.submit "Regjistro punetorin", class: "btn btn-primary" %>
      <span class="picture">
        <%= f.file_field :picture, accept: 'image/jpeg, image/gif, image/png' %>
      </span>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $('#user_picture').bind('change', function() {
    size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 1) {
      alert('Madhesia maksimale e fotos mund te jete 1MB. Ju lutemi zgjedhni nje foto me te vogel.');
    }
  });
</script>
