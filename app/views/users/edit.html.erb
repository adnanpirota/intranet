<% provide(:title, "Perditsoje profilin") %>
<h1>Perditsoje profilin</h1>

<div class="row" >
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, html: { multipart: true}) do |f| %>
      <%= render 'fields', f: f %>
      
      <%= f.submit "Ruaj ndryshimet", class: "btn btn-primary" %>
      <span class="picture">
        <%= f.file_field :picture %>
      </span>
      
    <% end %>
    
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= image_tag @user.picture_url if @user.picture? %>
      <a href="http://gravatar.com/emails">change</a>
    </div>
  </div>
</div>