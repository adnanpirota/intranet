<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="leaves_form">
      <%= render 'shared/leaves_form' %>
      </section>
    </aside>
  </div>
<% else %>
