    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="pending_info">
        <%= render 'shared/pending_info' %>
      </section>
      <section class="perkujtimet_info">
        <%= render 'shared/perkujtimet' %>
      </section>
      
    </aside>
    <div class="col-md-8">
      
      <div class="well">
          <h3>Kontratat aktive</h3>
          
          <%= link_to "KontratÃ« e re", new_contract_path, remote: true, class: "btn btn-primary"%>
        
