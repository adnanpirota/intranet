<% provide(:title, "Furnitori") %>
<% if logged_in? %>

  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <div class="well">
      <section class="pending_info">
        <%= render 'shared/pending_info' %>
      </section>
      </div>
      <section class="perkujtimet">
        <%= render 'shared/perkujtimet' %>
      </section>
      
    </aside>
    
    <div class="container col-md-8">
      <div class="center jumbotron">
        <div class="well">
          <div class="row">
            <span class="col-md-2"><h4 class="majte">Emri:</h4> </span><span class="col-md-10"><h4 class="majte"><%= @supplier.emri %></h4></span></br>  
          </div>
          <div class="row">
            <span class="col-md-2"><h4 class="majte">Telefoni: </h4></span><span class="col-md-10"><h4 class="majte"><%= @supplier.telefoni %></h4></span></br>  
          </div>
          <div class="row">
            <span class="col-md-2"><h4 class="majte">Emaili: </h4></span><span class="col-md-10"><h4 class="majte"><%= @supplier.emaili %></h4></span></br>  
          </div>
          <div class="row">
            <span class="col-md-2"><h4 class="majte">Vendi: </h4></span><span class="col-md-10"><h4 class="majte">KS</h4></span></br>  
          </div>
        </div>
        <h1>Kontratat me furnitorin</h1>
        
      </div>
      <h3>Kontratat aktive</h3>
      <table data-toggle="table" class="table table-bordered col-md-12">
        <thead>
          <tr>
            <th class="col-sm-1">Numri i kontrates</th>
            <th class="col-sm-1">Furnitori</th>
            <th class="col-sm-1">Artikulli</th>
            <th class="col-sm-1">Sasia</th>
            <th class="col-sm-1">Cmimi</th>
            <th class="col-sm-1">Avansi</th>
            <th class="col-sm-1">Pjesa e mbetur</th>
            <th class="col-sm-1">Koha arritjes</th>
            <th class="col-sm-1">Koha reale e arritjes</th>
          </tr>
        </thead>
        
        <%= render @kontratat_e_furnitorit %>
      </table>
      
      <h3>Kontratat e kompletuara</h3>
      <table data-toggle="table" class="table table-bordered col-md-12">
        <thead>
          <tr>
            <th class="col-sm-1">Numri i kontrates</th>
            <th class="col-sm-1">Furnitori</th>
            <th class="col-sm-1">Artikulli</th>
            <th class="col-sm-1">Sasia</th>
            <th class="col-sm-1">Cmimi</th>
            <th class="col-sm-1">Avansi</th>
            <th class="col-sm-1">Pjesa e mbetur</th>
            <th class="col-sm-1">Koha arritjes</th>
            <th class="col-sm-1">Koha reale e arritjes</th>
          </tr>
        </thead>
        
        <%= render @kontratat_e_kompletuara %>
      </table>
     
    </div>
  </div>
<% else %>
  <h3>Kycuni, ju lutem!</h3>  
<% end %>



