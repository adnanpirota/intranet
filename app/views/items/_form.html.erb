<%= form_for @item, remote: true, html: { class: "form-horizontal", style: "display:inline;" }  do |f| %>
  
  <div class="modal-body">
    <ul class="errors"></ul>
    
    <div class="control-group">
      <%= f.label :emertimi, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :emertimi %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :pershkrimi, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :pershkrimi %>
      </div>
    </div>
    
        <div class="control-group">
      <%= f.label :unit_id, "Njesia matese" ,  class: "control-label" %>
      <div class="controls">
        <%= f.collection_select :unit_id, Unit.order(:id), :id, :njesia, include_blank: true %>
      </div>
    </div>
    
    <%= hidden_field(:department_id, 6) %>
    
  </div>
  <div class="modal-footer">
    <%= f.submit "Shto artikullin",   class: "btn btn-primary" %>
    <%= link_to "Anulo", "#", class: "btn", data: {dismiss: "modal"} %>
  </div>

<% end %>