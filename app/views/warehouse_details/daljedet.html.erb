<% provide(:title, "Artikujt - Dalje") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="pending_info">
        <%= render 'shared/pending_info' %>
      </section>
      <section class="perkujtimet_info">
        <%= render 'shared/perkujtimet' %>
      </section>
    </aside>
    <div class="container col-md-8">
      <div class="center jumbotron">
        <h3>Dalje nga depo</h3>
          <div class="well">
            <h3>Punetori: <%= @warehouse_document.user.emri %></h3>
            <h3>Reparti: <%= @warehouse_document.department.departamenti %></h3>
            <h3>Shenim: <%= @warehouse_document.shenim %></h3>
            
          </div>
          <%= link_to "Shto artikull", newart_dalje_path, remote: true, class: "btn btn-primary" %>
      </div>
      <h3>Artikujt</h3>
      
        
        <table data-toggle="table" class="table table-bordered col-md-12">
          <thead>
            <tr>
              <th class="col-sm-1">Emertimi</th>
              <th class="col-sm-1">Sasia</th>
              <th class="col-sm-1">Cmimi</th>
              <th class="col-sm-1">Totali</th>
            </tr>
          </thead>
          <tbody class="wdetail-index">
            <%= render "artikujt_dalje" %>
          </tbody>
        </table>
        <%= link_to "Ruaje faturen", warehouse_documents_path, class: "btn btn-primary" %>
        </div>
        <div id="warehouse-detail-modal" class="modal fade">
          <div class="modal-dialog">
           <div id="inner-warehouse-detail-modal" class="modal-content"></div>
         </div>
       
    </div>
  </div>    
<% else %>
  <h3>Kycuni, ju lutem!</h3>  
<% end %>